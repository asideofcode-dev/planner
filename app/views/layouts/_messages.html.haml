- flash.each do |name, msg|
  - unless (name.eql?('notice') && @suppress_notices) || (name.eql?('alert-danger') && @suppress_warnings)
    - name = name.eql?('notice') ? 'alert-primary' : name
    - if msg.is_a?(String)
      %div{ 'data-alert': '', class: "mb-0 alert #{name}" }
        .row
          .col-11
            = content_tag :div, msg.html_safe
          .col-1
            = link_to '#', class: 'close float-right' do
              &times;

    - elsif msg.is_a?(Array)
      - msg.each do |message|
        %div{ 'data-alert': '', class: "mb-0 alert #{name}" }
          .row
            .col-11
              = content_tag :span, message.html_safe
            .col-1
              = link_to '#', class: 'close float-right' do
                &times;
